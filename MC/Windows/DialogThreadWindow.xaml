<Controls:MetroWindow x:Class="MC.Windows.DialogThreadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MC"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        mc:Ignorable="d"
        Title="DilogThreadWindow" Height="150" Width="300">
    <GroupBox Header="Type of threading" >
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Margin="2,20" Click="TypeButton_Click">Thread</Button>
            <Button Grid.Column="1" Margin="2,20" Click="TypeButton_Click">Parralel</Button>
            <Button Grid.Column="2" Margin="2,20" Click="TypeButton_Click">Tasks</Button>
            <Button Grid.Column="3" Margin="2,20" Click="TypeButton_Click">Async</Button>
        </Grid>
    </GroupBox>
</Controls:MetroWindow>
