<Window x:Class="MC.Windows.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MC.Windows"
        mc:Ignorable="d"
        Title="ProgressWindow" Height="200" Width="400">
    <StackPanel>
        <TextBlock Name="ProcessName" Margin="20"></TextBlock>
        <ProgressBar Height="20" Margin="0,20" Name="PB" Maximum="100" Minimum="0"></ProgressBar>
        <Button Click="Button_Click">Cancel</Button>
    </StackPanel>
</Window>
